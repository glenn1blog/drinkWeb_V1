mixin nav-a(img, textZH, textEN)
    a(href="#")
        img(src="img/" + img + ".png", alt="縮圖 連結")
        span=textZH
        br
        sapn=textEN
mixin title(img, textZH, textEN)
    div(class="title")
        img(src="img/" + img + ".png", alt="縮圖 連結")
        span=textZH
        br
        sapn=textEN

mixin title(img, textZH, textEN)
    div(class="title")
        img(src="img/" + img + ".png", alt="縮圖 連結")
        span=textZH
        br
        sapn=textEN

mixin location-box(nameZh, nameEg, img)
    div(class="location-box")
        div(class="location-title")
            div(class="location-text")
                span=nameZh
                br
                span=nameEg
            img(src="img/location.png", alt="據點")
        img(src="img/" + img + ".png", alt="據點" class="bg-pic")

<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title 獅子堂 | 首頁
        link(rel="stylesheet", href="style.css")
    body
        header(id="nav")
            div(id="logo") LION SUGAR
                br
                span 獅子堂黑糖專賣
            nav
                +nav-a("home", "關於我們", "ABOUT")
                +nav-a("location", "全球據點", "LOCATIONS")
                +nav-a("hot", "熱門經典", "CLASSICAL")
                +nav-a("contact", "加盟專區", "FRANCHISEE")

        section(id="banner")

        section(id="about")
            div(class="bg bg-about")
            div(class="container")
                +title("home", "關於我們", "ABOUT")

        section(id="location")
            div(class="bg bg-location")
            div(class="container")
                +title("location", "全球據點", "LOCATIONS")
                
                div(id="location-container")
                    +location-box("台灣", "Taiwan", "location_taipei")
                    +location-box("香港", "HongKong", "location_hongkong")
                    +location-box("新加坡", "Singapore", "location_singapore")

        +title("hot", "熱門經典", "CLASSICAL")
        +title("contact", "加盟專區", "FRANCHISEE")
