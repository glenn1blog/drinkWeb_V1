mixin nav-a(img, textZH, textEN)
    a(href="#")
        img(src="img/" + img + ".png", alt="縮圖 連結")
        span=textZH
        br
        sapn=textEN
mixin title(img, textZH, textEN)
    div(class="title")
        img(src="img/" + img + ".png", alt="縮圖 連結")
        span=textZH
        br
        sapn=textEN

mixin title(img, textZH, textEN)
    div(class="title")
        img(src="img/" + img + ".png", alt="縮圖 連結")
        span=textZH
        br
        sapn=textEN

mixin location-box(nameZh, nameEg, img)
    div(class="location-box")
        div(class="location-title")
            div(class="location-text")
                span=nameZh
                br
                span=nameEg
            img(src="img/location.png", alt="據點")
        div(class="location-img-box")
            img(src="img/" + img + ".png", alt="據點" class="bg-pic")

<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title 獅子堂 | 首頁
        link(rel="stylesheet", href="style.css")
        //- AOS CDN
        link(rel="stylesheet", href="https://unpkg.com/aos@next/dist/aos.css")
    body
        header(id="nav")
            div(class="logo") LION SUGAR
                br
                span(class="logo-zh") 獅子堂黑糖專賣
            nav
                +nav-a("home", "關於我們", "ABOUT")
                +nav-a("location", "全球據點", "LOCATIONS")
                +nav-a("hot", "熱門經典", "CLASSICAL")
                +nav-a("contact", "加盟專區", "FRANCHISEE")

        section(id="banner")

        section(id="about")
            div(class="bg bg-about")
            div(class="container")
                +title("home", "關於我們", "ABOUT")

        section(id="location")
            div(class="bg bg-location")
            div(class="container")
                +title("location", "全球據點", "LOCATIONS")
                
                div(id="location-container")
                    +location-box("台灣", "Taiwan", "location_taipei")
                    +location-box("香港", "HongKong", "location_hongkong")
                    +location-box("新加坡", "Singapore", "location_singapore")

        section(id="classical")
            div(class="bg bg-classical")
            div(class="container")
                +title("hot", "熱門經典", "CLASSICAL")
                div(id="classical-box")
                    div(class="logo") LION SUGAR
                        br
                        span(class="logo-zh") 獅子堂黑糖專賣
                    img(src="img/drink.png", alt="飲料" data-aos="slide-up" data-aos-duration="1000" data-aos-delay="100")

        
        section(id="franchisee")
            div(class="bg bg-classical")
            div(class="container")
                +title("contact", "加盟專區", "FRANCHISEE")
                div(class="franchisee-box" data-aos="zoom-in" data-aos-duration="1000")
                    a(href="")
                        div(class="logo") LION BEER
                                br
                                span(class="logo-zh") 獅子堂啤酒專賣
                        h3 加盟諮詢請入內



        //- AOS CDN
        script(src="https://unpkg.com/aos@next/dist/aos.js")
        script AOS.init();
